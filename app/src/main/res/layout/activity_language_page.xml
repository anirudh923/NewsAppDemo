<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C4343"
    tools:context=".LanguagePage">

    <Button
        android:id="@+id/btPunjabi"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Punjabi"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btHindi" />

    <Button
        android:id="@+id/btHindi"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Hindi"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEnglish" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="407dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Select a language"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="311dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/logopic" />

    <Button
        android:id="@+id/btEnglish"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:text="English"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>